{% extends 'base.html.twig' %}
{% block body %}

    <div class="login-body">
        <h1>Connexion</h1>
        <br>
        <br>

        <form action="{{ path('login') }}" method="post">

            {% if error %}
                <div>{{ error.messageKey | trans(error.messageData,'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="login">Nom d'utilisateur</label>
                <input type="text" id="login" name="_username" class="form-control" placeholder="login" value="{{ last_login }}">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="password" class="form-control">
            </div>
            <br>

            <button class="btn btn-secondary btn-purple" type="submit">Se connecter</button>
        </form>
    </div>

{% endblock %}